<p id="notice"><%= notice %></p>

<%= form_tag search_players_path, :method => 'get' do %>

<p>
  <%= label_tag :search_text %>
  <%= text_field_tag :search_text %>
</p>

<p>
  <%= submit_tag 'search' %>
</p>

<% end %>

<% if @players %>


<table>
  <tr>
    <th>Name</th>
    <th>Teams played for</th>
    <th>Position</th>
    <th>Points</th>
    <th>Rebounds</th>
    <th>Assists</th>
    <th>Championships won</th>
    <th>Mvp won</th>
    <th>Finals mvp won</th>
    <th>Allstar</th>
    <th>Year retired</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.Name %></td>
    <td><%= player.Teams_Played_For %></td>
    <td><%= player.Position %></td>
    <td><%= player.Points %></td>
    <td><%= player.Rebounds %></td>
    <td><%= player.Assists %></td>
    <td><%= player.Championships_Won %></td>
    <td><%= player.MVP_Won %></td>
    <td><%= player.Finals_MVP_Won %></td>
    <td><%= player.AllStar %></td>
    <td><%= player.Year_Retired %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<% end %>